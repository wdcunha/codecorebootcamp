<%- include('./partials/header') %>


<form action="/cohorts" method='POST' enctype="multipart/form-data">
  <div class="form-group">
    <label for="cohort_logo">Logo</label>
    <input class="form-control" type="file" name="cohort_logo" value="">
  </div>

  <div class="form-group">
    <label for="name">Name</label>
    <input class="form-control" type="text" name="name" value="" placeholder="Enter a name">
  </div>
  <div class="form-group">
    <label for="members">Members</label>
    <textarea class="form-control" rows='5' name="members" placeholder="What's on your mind?"></textarea>
  </div>
  <input class="btn btn-outline-primary" style="float: right" type='submit' value='Submit' />
</form>


<%- include('./partials/footer') %>

<%- include('./partials/header') %>

  <div class="container mt-4" style="border: thin solid black; border-radius: 5px; padding: 10px;">
    <h4> <%= cohort.name %> </h4>
    <p>
      <%= cohort.members %>
    </p>
    <hr />
    <form action="/cohorts" method="GET">
    <div class="form-check">
      <p> Method </p>
      <label for="method" class="form-check-label">
          <input class="form-check-input" type="radio" name="method" value="option1" checked>
            Team Count
        </label>
    </div>

    <div class="form-check">
      <label for="method" class="form-check-label">
        <input class="form-check-input" type="radio" name="method" value="option2">
          Number Per Team
      </label>
    </div>

    <div class="form-group">
      <label for="quantity">Quantity</label>
      <input class="form-control" type="text" name="quantity" value="" placeholder="Enter a quantity">
    </div>
    <input class="btn btn-outline-primary" type='submit' value='Assign Teams' />
  </form>

  </div>


  <%- include('./partials/footer') %>
